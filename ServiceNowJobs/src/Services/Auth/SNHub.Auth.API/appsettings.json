{
  "AllowedHosts": "*",
  "RunMigrationsOnStartup": false,
  "DetailedErrors": false,

  "ConnectionStrings": {
    "AuthDb": "Host=localhost;Port=5432;Database=snhub_auth;Username=snhub;Password=REPLACE_IN_KEYVAULT",
    "Redis": "localhost:6379,abortConnect=false"
  },

  "JwtSettings": {
    "SecretKey": "REPLACE_IN_KEYVAULT",
    "Issuer": "snhub-auth-service",
    "Audience": "snhub-platform",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 30
  },

  "AzureEmail": {
    "ConnectionString": "REPLACE_IN_KEYVAULT",
    "SenderAddress": "noreply@snhub.io",
    "AppBaseUrl": "https://snhub.io"
  },

  "AzureStorage": {
    "AccountUrl": "https://snhubstorage.blob.core.windows.net",
    "ProfileImagesContainer": "profile-images",
    "CvContainer": "cvs"
  },

  "Azure": {
    "KeyVaultUrl": "https://snhub-keyvault.vault.azure.net/"
  },

  "ApplicationInsights": {
    "ConnectionString": "REPLACE_IN_KEYVAULT"
  },

  "Cors": {
    "AllowedOrigins": [
      "https://snhub.io",
      "https://www.snhub.io",
      "https://app.snhub.io"
    ]
  },

  "Seed": {
    "SuperAdmin": {
      "Email": "REPLACE_IN_KEYVAULT",
      "Password": "REPLACE_IN_KEYVAULT",
      "FirstName": "SNHub",
      "LastName": "Admin"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    }
  }
}
